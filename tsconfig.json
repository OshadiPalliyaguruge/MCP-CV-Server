{
  "compilerOptions": {
    "module": "nodenext",       
    "moduleResolution": "nodenext",
    "target": "ES2020",           
    "strict": true,                   
    "esModuleInterop": true,          
    "outDir": "dist",                 
    "rootDir": "src",                 
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
